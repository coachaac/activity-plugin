<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.lelab.activity" >

    <uses-sdk android:minSdkVersion="22" />

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application>
        <receiver
            android:name="fr.lelab.activity.ActivityTransitionReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="fr.lelab.activity.ACTION_PROCESS_ACTIVITY_TRANSITIONS" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.location.ActivityRecognitionClient"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>